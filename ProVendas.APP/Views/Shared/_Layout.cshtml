<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProVendas.APP</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProVendas.APP.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/dataTable.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/rowReorder.dataTables.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/responsive.dataTables.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/font-awesome/css/all.min.css"/>
</head>
<body>

    <header class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0 shadow">
        <a class="navbar-brand col-md-3 col-lg-2 me-0 px-3 fs-6" asp-controller="Home" asp-action="Index">ProVendas.APP</a>
        <button class="navbar-toggler position-absolute d-md-none collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#sidebarMenu" aria-controls="sidebarMenu" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <input class="form-control form-control-dark w-100 rounded-0 border-0" type="text" placeholder="Pesquisar" aria-label="Search">
        <div class="navbar-nav">
            <div class="nav-item text-nowrap">
               <a class="nav-link px-3" asp-controller="Login" asp-action="Index">
                    <i class="fa-solid fa-sign-out"></i>
                    Sair
               </a>
            </div>
        </div>
    </header>

    <div class="container-fluid pt-3"> 
        <div class="row">
            <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
                <div class="position-sticky pt-3 sidebar-sticky">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">
                                <i class="fa-solid fa-dashboard"></i>
                                Dashboard
                            </a>
                        </li>
                        <li class="dropdown-center">
                             <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fa-solid fa-list-check"></i>
                                Cadastros
                            </a>
                            <ul class="dropdown-menu dropdown-menu-dark ms-2">
                                <li class="nav-item">
                                    <a class="dropdown-item" asp-controller="Produto" asp-action="Index">
                                        <i class="fa-solid fa-store"></i>
                                        Produtos
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Cliente" asp-action="Index">
                                        <i class="fa-solid fa-people-group"></i>
                                        Clientes
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Fornecedor" asp-action="Index">
                                        <i class="fa-solid fa-truck"></i>
                                        Fornecedores
                                    </a>
                                </li>

                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="#">Something else here</a></li>
                            </ul>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Privacy">
                                <i class="fa-solid fa-user-shield"></i>
                                Termo de Privacidade
                            </a>
                        </li>

                        <li class="nav-item me-auto ms-2 mt-5 pt-5">
                            <a class="dropdown text-decoration-none text-dark" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fa-solid fa-gear fs-4"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-dark">
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Filial" asp-action="Index">
                                        <i class="fa-solid fa-shop"></i>
                                        Filiais
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Categoria" asp-action="Index">
                                        <i class="fa-solid fa-file-lines"></i>
                                        Categorias
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Usuario" asp-action="Index">
                                        <i class="fa-solid fa-users"></i>
                                        Usuarios
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item" href="#">
                                        <span data-feather="file-text" class="align-text-bottom"></span>
                                        Last quarter
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </nav>

            <main role="main" class="col-md-9 ms-sm-auto col-lg-10 px-md-4 pb-3">               
                @RenderBody()
            </main>   
            
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="d-flex justify-content-center">
            &copy; @DateTime.Now.ToString("yyyy") - ProVendas.APP
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/feather-icons@4.28.0/dist/feather.min.js" integrity="sha384-uO3SXW5IuS1ZpFPKugNNWqTZRRglnUJK6UAZ/gxOX80nxEkN9NcGZTftn6RzhGWE" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.4/dist/Chart.min.js" integrity="sha384-zNy6FEbO50N+Cg5wap8IKA4M/ZnLJgzc6w2NqACZaK0u0FXfOWRRJOnQtpZun8ha" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/popper.js/umd/popper.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/dataTables.min.js"></script>
    <script src="~/js/dataTables.rowReorder.min.js"></script>
    <script src="~/js/dataTables.responsive.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
