@model IEnumerable<ProVendas.APP.Models.FilialViewModel>

@{
    ViewData["Title"] = "Filiais";
}

<h1><i class="fa-solid fa-shop"></i> @ViewData["Title"]</h1>

<div class="d-flex justify-content-start my-4">
    <a class="btn btn-primary" role="button" asp-action="Create">
        <i class="fa-solid fa-plus"></i>
        Novo Produto
    </a>
</div>

<table id="dataTable" class="table table-striped table-bordered nowrap py-4" style="width:100%">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id_Filial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PessoaDocumento.Ds_Pessoa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ds_Filial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cm_Certificado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dt_Abertura)
            </th>
            <th class="text-center">Ações</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id_Filial)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PessoaDocumento.Ds_Pessoa)
                </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Ds_Filial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cm_Certificado)
            </td>
            <td>
                    @item.Dt_Abertura.ToString("dd/MM/yyyy")
            </td>
                <td class="text-center">
                    @Html.ActionLink("", "Edit", new { id = item.Id_Filial }, new{@class = "btn btn-secondary fa-solid fa-file-pen"}) |
                    @Html.ActionLink("", "Details", new { id = item.Id_Filial }, new{@class = "btn btn-success fa-solid fa-circle-info"}) |
                    @Html.ActionLink("", "Delete", new { id = item.Id_Filial }, new{@class = "btn btn-danger fa-solid fa-trash"})
                </td>
        </tr>
}
    </tbody>
</table>
