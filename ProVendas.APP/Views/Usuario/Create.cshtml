@model ProVendas.APP.Models.UsuarioViewModel

@{
    ViewData["Title"] = "Usuário";
}

<h4 class="py-4">
    <i class="fa-solid fa-user-plus"></i>
     Cadastrar @ViewData["Title"]
</h4>

<div class="d-flex justify-content-end">
    <a class="btn btn-secondary" role="button" asp-action="Index">
        <i class="fa-solid fa-arrow-left"></i>
        Voltar para lista
    </a>
</div>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row g-3">
                <div class="col-md-4">
                    <label asp-for="Usuario.Ds_Pessoa" class="control-label fw-bold"></label>
                    <select asp-for="Usuario.Id_Pessoa" class="form-select"
                            asp-items="@(new SelectList(ViewBag.Pessoas, "Id_Pessoa","Ds_Pessoa"))" required>
                        <option value="">Selecione...</option>
                    </select>
                    <span asp-validation-for="Usuario.Id_Pessoa" class="text-danger"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="Perfil.Ds_Perfil" class="control-label fw-bold"></label>
                    <select asp-for="Perfil.Id_Perfil" class="form-select"
                            asp-items="@(new SelectList(ViewBag.Perfis, "Id_Perfil","Ds_Perfil"))" required>
                        <option value="">Selecione...</option>
                    </select>
                    <span asp-validation-for="Perfil.Id_Perfil" class="text-danger"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="Filial.Ds_Filial" class="control-label fw-bold"></label>
                    <select asp-for="Filial.Id_Filial" class="form-select"
                            asp-items="@(new SelectList(ViewBag.Filiais, "Id_Filial","Ds_Filial"))" required>
                        <option value="">Selecione...</option>
                    </select>
                    <span asp-validation-for="Filial.Id_Filial" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Ds_Usuario" class="control-label fw-bold"></label>
                    <input asp-for="Ds_Usuario" class="form-control" required />
                    <span asp-validation-for="Ds_Usuario" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Ds_Senha" class="control-label fw-bold"></label>
                    <input asp-for="Ds_Senha" class="form-control" required />
                    <span asp-validation-for="Ds_Senha" class="text-danger"></span>
                </div>

                <button class="w-100 btn btn-success btn-lg" type="submit" value="Save">
                    <i class="fa-solid fa-floppy-disk"></i>
                    Salvar
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
