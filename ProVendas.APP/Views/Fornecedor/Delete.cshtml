@model ProVendas.APP.Models.FornecedorViewModel

@{
    ViewData["Title"] = "Fornecedor";
}

<h3 class="py-4">Tem certeza que deseja deletar esse cliente?</h3>
<div>
    <h4>
        <i class="fa-solid fa-user-xmark"></i>
        Deletar @ViewData["Title"]        
    </h4>

    <hr />

    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PessoaDocumento.Ds_Pessoa)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PessoaDocumento.Ds_Pessoa)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PessoaDocumento.Ds_Documento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PessoaDocumento.Ds_Documento)
        </dd>
    </dl>
    <partial name="_DetailsEndereco" />

    <partial name="_DetailsContato" />

    <div class="d-flex justify-content-end">
        <form asp-action="Delete">
            <button type="submit" class="btn btn-danger mx-2">
                <i class="fa-solid fa-trash"></i>
                Deletar
            </button>
            <a class="btn btn-secondary mx-2" asp-action="Index">
                <i class="fa-solid fa-arrow-left"></i>
                Voltar para lista
            </a>
        </form>
    </div>
</div>
