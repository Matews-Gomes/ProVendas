@model ProVendas.APP.Models.FornecedorViewModel

@{
    ViewData["Title"] = "Informações";
}

<div>
    <h4 class="py-4">
        <i class="fa-solid fa-circle-info"></i>
        @ViewData["Title"] do Fornecedor
    </h4>


    <hr />
    <dl class="row">

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PessoaDocumento.Ds_Pessoa)
        </dt>

        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PessoaDocumento.Ds_Pessoa)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TipoPessoa.Ds_TipoPessoa)
        </dt>

        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TipoPessoa.Ds_TipoPessoa)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PessoaDocumento.Ds_Documento)
        </dt>

        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PessoaDocumento.Ds_Documento)
        </dd> 
        
        <dt class="col-sm-2">
            Cliente
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tp_Cliente)
        </dd>
    </dl>
    <partial name="_DetailsEndereco" />
    <partial name="_DetailsContato" />
</div>

<div class="d-flex justify-content-end">
    <a class="btn btn-secondary mx-2" asp-action="Index">
        <i class="fa-solid fa-arrow-left"></i>
        Voltar para lista
    </a>
</div>
