@model IEnumerable<ProVendas.APP.Models.ClienteViewModel>

@{
    ViewData["Title"] = "Clientes";
}

<h1 class="py-4">
    <i class="fa-solid fa-people-group"></i>
    @ViewData["Title"]   
</h1>

<div class="d-flex justify-content-start my-4">
    <a class="btn btn-primary" role="button" asp-action="Create">
        <i class="fa-solid fa-plus"></i>
        Novo Cliente
    </a>
</div>

<table id="dataTable" class="table table-striped table-bordered nowrap py-4" style="width:100%">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ds_Cliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoPessoa.Ds_TipoPessoa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PessoaDocumento.Ds_Documento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vl_Limite)
            </th>
            <th class="text-center">Ações</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ds_Cliente)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoPessoa.Ds_TipoPessoa)
                </td>
             <td>
                @Html.DisplayFor(modelItem => item.PessoaDocumento.Ds_Documento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vl_Limite)
            </td>
            <td>
                    @Html.ActionLink("", "Edit", new { id = item.Id_Cliente }, new{@class = "btn btn-secondary fa-solid fa-file-pen"}) |
                    @Html.ActionLink("", "Details", new { id = item.Id_Cliente }, new{@class = "btn btn-success fa-solid fa-circle-info"}) |
                    @Html.ActionLink("", "Delete", new { id = item.Id_Cliente }, new{@class = "btn btn-danger fa-solid fa-trash"})
            </td>
        </tr>
}
    </tbody>
</table>
