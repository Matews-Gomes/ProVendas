@model ProVendas.APP.Models.UsuarioViewModel
@{
    Layout = "_LayoutLogoff";
    ViewData["Title"] = "Login";
}

<main class="form-signin w-100 m-auto py-5">
    <form asp-action="Index" class="needs-validation" novalidate>
        <div class="d-flex justify-content-center">
            <img class="mb-4" src="~/images/login.jpg" alt="Logo" width="120" height="107">
        </div>
        
        <div class="d-flex justify-content-center">
            <h1 class="h3 mb-3 fw-normal">Entrar no Sistema</h1>
        </div>
        
        <div class="col-md-12 form-floating">               
            <input asp-for="Ds_Usuario" class="form-control" required />
            <span asp-validation-for="Ds_Usuario" class="text-danger"></span>
        </div>            

        <div class="col-md-12 form-floating">
            
            <input asp-for="Ds_Senha" class="form-control" placeholder="Senha" required />
            <span asp-validation-for="Ds_Senha" class="text-danger"></span>
        </div>

        <a href="#" class="link-secondary">Esqueci minha senha!</a>

        <button class="w-100 btn btn-lg btn-primary mt-2" type="submit">Entar</button>
    </form>
</main>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
