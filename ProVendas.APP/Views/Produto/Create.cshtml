@model ProVendas.APP.Models.ProdutoViewModel

@{
    ViewData["Title"] = "Produto";
}

<h1>Cadastrar @ViewData["Title"]</h1>

<div class="d-flex justify-content-end">
    <a class="btn btn-secondary" role="button" asp-action="Index">
        <i class="fa-solid fa-arrow-left"></i>
        Voltar para lista
    </a>
</div>

<hr/>
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" enctype="multipart/form-data" class="needs-validation" novalidate>
             <div class="row g-3">

                <div class="col-md-6">
                    <label asp-for="Ds_Produto" class="control-label fw-bold"></label>
                    <input asp-for="Ds_Produto" class="form-control" required/>
                    <span asp-validation-for="Ds_Produto" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="ImagemUpload" class="form-label fw-bold mb-0"></label>
                    <input asp-for="ImagemUpload" class="form-control" type="file" >
                    <span asp-validation-for="ImagemUpload" class="text-danger"></span>
                </div>

                <div class="col-md-12">
                    <label asp-for="Ds_Descricao" class="control-label fw-bold"></label>
                    <textarea asp-for="Ds_Descricao" class="form-control" required></textarea>
                    <span asp-validation-for="Ds_Descricao" class="text-danger"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="Vl_PrecoCusto" class="control-label fw-bold"></label>
                    <input asp-for="Vl_PrecoCusto" value="" class="form-control" required />
                    <span asp-validation-for="Vl_PrecoCusto" class="text-danger"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="Vl_PrecoVenda" class="control-label fw-bold"></label>
                    <input asp-for="Vl_PrecoVenda" value="" class="form-control" required />
                    <span asp-validation-for="Vl_PrecoVenda" class="text-danger"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="Qt_Quantidade" class="control-label fw-bold"></label>
                    <input asp-for="Qt_Quantidade" value="" class="form-control" required />
                    <span asp-validation-for="Qt_Quantidade" class="text-danger"></span>
                </div>
        
                <div class="col-md-6">
                    <label asp-for="Fornecedor.Id_Fornecedor" class="control-label fw-bold"></label>
                    <select asp-for="Fornecedor.Id_Fornecedor" class="form-select"
                            asp-items="@(new SelectList(ViewBag.fornecedores, "Id_Fornecedor","Ds_Fornecedor"))" required >
                        <option value="">Selecione...</option>
                    </select>
                    <span asp-validation-for="Fornecedor.Id_Fornecedor" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Categoria.Id_Categoria" class="control-label fw-bold"></label>
                    <select asp-for="Categoria.Id_Categoria" class="form-select"
                            asp-items="@(new SelectList(ViewBag.categorias, "Id_Categoria", "Ds_Categoria"))" required >
                        <option value="">Selecione...</option>
                    </select>
                    <span asp-validation-for="Categoria.Id_Categoria" class="text-danger"></span>
                </div>
                <button class="w-100 btn btn-success btn-lg" type="submit" value="Save">
                    <i class="fa-solid fa-floppy-disk"></i>
                    Salvar
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

