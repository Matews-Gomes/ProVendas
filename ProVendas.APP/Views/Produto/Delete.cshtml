@model ProVendas.APP.Models.ProdutoViewModel

@{
    ViewData["Title"] = "Produto";
}

<h1>Deletar @ViewData["Title"]</h1>

<h3>Tem certeza de que deseja excluir este @ViewData["Title"].ToString().ToLower()?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2 col-md-12">
            @Html.DisplayNameFor(model => model.ImagemUpload)
        </dt>
        <dd class="col-sm-10 col-md-12">
            <img src="~/images/@Model.Ds_Imagem" style="width: 180px; height: 100px" />
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Ds_Produto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ds_Produto)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Ds_Descricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ds_Descricao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Vl_PrecoCusto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Vl_PrecoCusto)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Vl_PrecoVenda)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Vl_PrecoVenda)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Fornecedor.PessoaDocumento.Ds_Pessoa)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Fornecedor.PessoaDocumento.Ds_Pessoa)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Categoria.Ds_Categoria)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Categoria.Ds_Categoria)
        </dd>
    </dl>
    <div class="d-flex justify-content-end">
        <form asp-action="Delete">
            <button class="btn btn-danger mx-2" type="submit">
                <i class="fa-solid fa-trash"></i>
                Deletar
            </button>
            <a class="btn btn-secondary mx-2" asp-action="Index">
                <i class="fa-solid fa-arrow-left"></i>
                Voltar para lista
            </a>
        </form>
    </div>
</div>
